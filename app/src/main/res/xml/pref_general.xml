<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- NOTE: EditTextPreference accepts EditText attributes. -->
    <!-- NOTE: EditTextPreference's summary should be set to its value by the activity code. -->
    <EditTextPreference
        android:defaultValue="http://192.168.1.114:4648"
        android:inputType="textCapWords"
        android:key="host"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="Media PC Hostname" />

    <EditTextPreference
        android:defaultValue="500"
        android:title="Network timeout in milliseconds"
        android:inputType="number"
        android:key="timeoutMillis"
        android:selectAllOnFocus="true"
        android:maxLines="1"
        android:singleLine="true"/>

    <EditTextPreference
        android:defaultValue="0.8"
        android:title="Trackpad sensitivity"
        android:inputType="number"
        android:key="trackpadSensitivity"
        android:selectAllOnFocus="true"
        android:maxLines="1"
        android:singleLine="true"/>

    <EditTextPreference
        android:defaultValue="3"
        android:title="Scroll sensitivity"
        android:inputType="number"
        android:key="scrollSteps"
        android:selectAllOnFocus="true"
        android:maxLines="1"
        android:singleLine="true"/>

</PreferenceScreen>
